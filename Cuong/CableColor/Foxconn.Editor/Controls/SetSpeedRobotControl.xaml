<UserControl x:Class="Foxconn.Editor.Controls.SetSpeedRobotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foxconn.Editor.Controls"
             mc:Ignorable="d" 
             >
    <Border Background="{DynamicResource MainWindowBackgroundBrush}" 
            CornerRadius="3">
        <Grid >
            <DockPanel HorizontalAlignment="Center">
                <TextBlock Text="Speed Robot"
                           Foreground="White"
                           Margin="5 2 5 0"></TextBlock>
                <TextBox x:Name="txtSetSpeedRobot" 
                         Width="120" 
                         Margin="5 0 5 0"></TextBox>
                <Button x:Name="btnSetSpeedRobot" 
                        Content="Set" 
                        Margin="0 0 5 0" 
                        IsDefault="True" Click="btnSetSpeedRobot_Click"></Button>
            </DockPanel>

        </Grid>
    </Border>
</UserControl>
